<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>


<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.nerdcore.dungeonsanddragons5echaractersheet.ApplicationViewerController">
    <children>
        <MenuBar fx:id="applicationMenuBar">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Load" onAction="#onLoad"/>
                        <MenuItem mnemonicParsing="false" text="Save" onAction="#onSave"/>
                        <MenuItem mnemonicParsing="false" onAction="#alert" text="Alert"/>

                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Delete"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About"/>
                    </items>
                </Menu>

            </menus>
        </MenuBar>
        <TabPane style="-fx-border-color: black; -fx-border-width: 2px;" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab fx:id="characterSheetTab" text="Character Sheet">
                    <content>
                        <fx:include source="character-sheet.fxml" fx:id="baseCharacterSheet"/>
                    </content>
                </Tab>
                <Tab fx:id="spellsTab" text="Spells">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
                    </content>
                </Tab>
            </tabs>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </TabPane>
    </children>
</VBox>
